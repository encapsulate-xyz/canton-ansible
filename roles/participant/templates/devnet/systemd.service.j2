[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ project }}
WorkingDirectory={{ participant_home_dir }}
EnvironmentFile={{ participant_environment_general_file_path }}
ExecStart={{ participant_bin_dir }}/{{ service_identifier }} \
daemon --no-tty \
--log-encoder=json \
--log-level-stdout=DEBUG \
--log-level-canton=DEBUG \
--log-file-appender=off \
--config {{ participant_app_config_file_path }} \
--config {{ participant_monitor_config_file_path }} \
--config {{ participant_parameters_config_file_path }} \
--config {{ participant_additional_config_file_path }}

Restart=always
RestartSec=4
LimitNOFILE=65536
MemoryMax=64G
StandardOutput=append:{{ participant_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
