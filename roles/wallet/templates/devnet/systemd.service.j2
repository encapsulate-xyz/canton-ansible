[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ project }}
WorkingDirectory={{ wallet_home_dir }}
ExecStart={{ wallet_nodejs_dir }}/serve -s {{ wallet_bin_dir }} \
-l {{ canton.wallet.ports.listen_port }}
Restart=always
RestartSec=4
LimitNOFILE=65536
MemoryMax=8G
StandardOutput=append:{{ wallet_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target
